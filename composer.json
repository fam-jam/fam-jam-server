{
  "name": "knotworks/knot-server",
  "description": "A decentralized server to build private social networks from..",
  "keywords": [
    "decentralized",
    "social",
    "network"
  ],
  "license": "BSD-3-Clause",
  "type": "project",
  "require": {
    "php": "^7.2",
    "doctrine/dbal": "^2.9",
    "fideloper/proxy": "^4.0",
    "fruitcake/laravel-cors": "^1.0",
    "hootlex/laravel-friendships": "^1.0",
    "intervention/image": "^2.3",
    "jrm2k6/cloudder": "^0.6.0",
    "laravel-notification-channels/telegram": "^0.0.5",
    "laravel/airlock": "^0.2.0",
    "laravel/framework": "^6.2",
    "laravel/tinker": "~1.0"
  },
  "require-dev": {
    "sempro/phpunit-pretty-print": "^1.1.11",
    "fzaninotto/faker": "^1.4",
    "mockery/mockery": "~1.0",
    "phpunit/phpunit": "^8.0",
    "filp/whoops": "~2.0",
    "facade/ignition": "^1.4",
    "nunomaduro/collision": "^3.0"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "Knot\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
      "tests/Utilities/functions.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  }
}
