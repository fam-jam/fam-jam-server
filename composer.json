{
  "name": "knotworks/knot-server",
  "description": "A self-hosted social network for families and other small groups",
  "keywords": [
    "decentralized",
    "social",
    "network"
  ],
  "license": "BSD-3-Clause",
  "type": "project",
  "require": {
    "php": "^7.4",
    "cloudinary/cloudinary_php": "2.0.0-beta7",
    "doctrine/dbal": "^2.9",
    "fideloper/proxy": "^4.2",
    "fruitcake/laravel-cors": "^2.0",
    "hootlex/laravel-friendships": "^1.0",
    "laravel-notification-channels/telegram": "^0.0.5",
    "laravel/framework": "^8.0",
    "laravel/sanctum": "^2.6",
    "laravel/tinker": "^2.0"
  },
  "require-dev": {
    "brianium/paratest": "^6.1",
    "facade/ignition": "^2.5",
    "filp/whoops": "~2.0",
    "fzaninotto/faker": "^1.9.1",
    "mockery/mockery": "^1.3.1",
    "nunomaduro/collision": "^5.0",
    "phpunit/phpunit": "^9.0",
    "sempro/phpunit-pretty-print": "^1.3.0"
  },
  "autoload": {
    "classmap": [
      "database/seeders",
      "database/factories"
    ],
    "psr-4": {
      "Knot\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
      "tests/Utilities/functions.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  }
}
